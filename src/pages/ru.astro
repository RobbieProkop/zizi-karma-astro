---
import Header from "../components/Russian/Header.astro";
import Footer from "../components/English/Footer.astro";
import Layout from "../layouts/RULayout.astro";
import Hero from "../components/Russian/Hero.astro";
import Points from "../components/Russian/Points.astro";
import Aspects from "../components/Russian/Aspects.jsx";
import Services from "../components/Russian/Prices.astro";
import Reviews from "../components/Reviews.astro";
import Contact from "../components/Contact.astro";

const reviews = await Astro.glob("../components/Russian/reviews/*.md");
---

<Layout title="Зизи Карма Психология">
  <!-- Navbar -->
  <Header />
  <!-- Hero -->
  <Hero />
  <!-- Points -->
  <Points />
  <!-- Aspects -->
  <Aspects client:load />
  <!-- Price -->
  <Services />
  <!-- Reviews -->
  <Reviews title={"Отзывы"} reviews={reviews} />
  <!-- Contact -->
  <Contact
    title="Записаться на консультацию"
    telephone="телефон"
    name="Имя"
    button="Оставить заявку"
  />
  <!-- Footer -->
  <Footer />
</Layout>
