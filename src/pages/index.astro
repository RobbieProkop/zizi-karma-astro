---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/English/Header.astro";
import Hero from "../components/English/Hero.astro";
import Points from "../components/English/Points.astro";
import Aspects from "../components/English/Aspects.jsx";
import Services from "../components/English/Prices.astro";
import Reviews from "../components/Reviews.astro";
import Contact from "../components/Contact.astro";
const reviews = await Astro.glob("../components/English/reviews/*.md");
---

<Layout title="Yuli Prokop Psychology">
  <!-- Navbar -->
  <Header />
  <!-- Hero -->
  <Hero />
  <!-- Points -->
  <Points />
  <!-- Aspects -->
  <Aspects client:load />
  <!-- Price -->
  <Services />
  <!-- Reviews -->
  <Reviews title={"Reviews"} reviews={reviews} />
  <!-- Contact -->
  <Contact
    title="Sign Up"
    telephone="Telephone"
    name="Name"
    button="Submit"
    privacy="By clicking on the button, you consent to the processing of personal data and agree to the privacy policy"
  />
  <!-- Footer -->
  <Footer />
</Layout>
